    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.1",
    "jest": "^29.7.0",
    "node-gyp": "^9.0.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.0.0"
  },
  "files": [
    "build/Release/peek-orm.node",
    "lib/**/*",
    "src/node/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thutasann/peek-orm.git"
  },
  "bugs": {
