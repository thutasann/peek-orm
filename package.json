{
  "name": "peek-orm",
  "version": "0.0.0",
  "description": "A Node.js ORM package using native C.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest",
    "benchmark": "cd __test__/benchmark && node index",
    "build:node": "tsc",
