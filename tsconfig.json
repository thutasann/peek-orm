{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "src/node"],
    "types": ["node"],
    "allowJs": true
  },
  "include": ["src/node/**/*", "examples/**/*.ts"],
  "exclude": ["node_modules", "lib", "build"]
}
